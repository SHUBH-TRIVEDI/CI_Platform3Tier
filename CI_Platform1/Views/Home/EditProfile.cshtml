@using CI_Entities1.Models.ViewModel
@model UserVM

<partial name="Navbar1" />
<div class="container">
    <div class="row">
        <div class="col-3 border me-4" style="height:300px">
            <div class=" d-flex justify-content-center">
                <img src="/Images/volunteer1.png" class="rounded-circle mt-5" style="height: 170px; width:170px ; "
                     alt="">
            </div>
            <div class="text-center mt-1 fs-4">Evan</div>
            <div class="text-center mt-1 text-secondary">Change Password</div>
        </div>
        <div class="col-8">
            <div class="fs-4">Basic Information</div>
            <div class="row mt-3">
                <hr class="col-3 " style="border: 2px solid black;">
                <hr class="col-9 ">
            </div>

            <form asp-action="EditProfile" asp-controller="Home">
                <div class="row">
                    <div class=" col-6">
                        <div>Name* </div>
                        <div class="col-11">
                            <input asp-for="FirstName" class="col-12 p-1" placeholder="Enter Your Name" type="text">
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>

                    </div>

                    <div class=" col-6">
                        <div>Surname*</div>
                        <div>
                            <input asp-for="LastName" class="col-12 p-1" placeholder="Enter Your Surname" type="text">
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>

                    </div>
                </div>

                <div class="row mt-4">
                    <div class=" col-6">
                        <div>Employee Id* </div>
                        <div class="col-11">
                            <input asp-for="EmployeeId" class="col-12 p-1" placeholder="Enter Your Employee Id" type="text">
                        </div>
                    </div>

                    <div class=" col-6">
                        <div>Manager*</div>
                        <div>
                            <input class="col-12 p-1" placeholder="Enter Your Manager Details" type="text">
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class=" col-6">
                        <div>Title* </div>
                        <div class="col-11">
                            <input asp-for="Title" class="col-12 p-1" placeholder="Enter Your Title" type="text">
                        </div>
                    </div>

                    <div class=" col-6">
                        <div>Department*</div>
                        <div class="mt-1">
                            <input asp-for="Department" class="col-12 p-1" placeholder="Enter Your Department Details" type="text">
                        </div>
                    </div>
                </div>

                <div class="mt-4">My Profile*</div>
                <textarea asp-for="Comments" name="" class="col-12" rows="5" placeholder="Enter Your Comments"></textarea>

                <div class="mt-4">Why I volunteer?</div>
                <textarea asp-for="WhyIVolunteer" name="" class="col-12" rows="5" placeholder="Why You Volunteered"></textarea>

                <div class="fs-4"> Address Information</div>
                <div class="row mt-3">
                    <hr class="col-3 " style="border: 2px solid black;">
                    <hr class="col-9 ">
                </div>

                <div class="row mt-4">
                    <div class=" col-6">
                        <div>City </div>
                        <div class="col-11">
                            <input asp-for="City" class="col-12 p-1" placeholder="Enter Your City" type="text">
                        </div>
                    </div>

                    <div class=" col-6">
                        <div>Country*</div>
                        <div>
                            <select placeholder="Select Your Country" class="form-select col-11 p-1 shadow-none">
                                <option>Select Your Country</option>
                                <option>Disabled select</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="fs-4 mt-5">Professional Information</div>
                <div class="row mt-3">
                    <hr class="col-4 " style="border: 2px solid black;">
                    <hr class="col-8 ">
                </div>

                <div class="row mt-4">
                    <div class=" col-6">
                        <div>Availablity</div>
                        <div>
                            <select class="form-select col-11 p-1 shadow-none">
                                <option>Select Your Availablity</option>
                                <option>Disabled select</option>
                            </select>
                        </div>
                    </div>

                    <div class=" col-6">
                        <div>Linkedin </div>
                        <div class="col-11">
                            <input class="col-12 p-1" placeholder="Enter Your Linkedin URL" type="text">
                        </div>
                    </div>
                </div>

                <div class="fs-4 mt-5">My Skills</div>
                <div class="row mt-3">
                    <hr class="col-2 " style="border: 2px solid black;">
                    <hr class="col-10 ">
                </div>
                <textarea name="" class="col-12" rows="5" placeholder="Enter Your Skills"></textarea>

                <div>
                    <button class="mt-2 p-2 text-secondary brd btn shadow-none">Add Skills</button>
                </div>
                <div class="d-flex">
                    <div class="ms-auto">
                        <button type="submit" value="login" class="mt-3 oran px-3 p-1 ">Save</button>
                    </div>
                </div>

            </form>

        </div>

    </div>

    <div class="row mt-5">
        <div class="col-2">Privacy Policy</div>
        <div class="col-2">Contact Us</div>
    </div>
</div>
